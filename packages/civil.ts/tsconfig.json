{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "outDir": "./build/",
    "strict": true,
    "noImplicitThis": false,
    "declaration": true,
    "declarationDir": "./build/",
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true // https://github.com/ReactiveX/rxjs/issues/3031
  },
  "include": [
    "./doc/**/*.ts",
    "./src/**/*.ts",
    "./test/**/*.ts",
    "./node_modules/web3-typescript-typings/index.d.ts"
  ]
}
