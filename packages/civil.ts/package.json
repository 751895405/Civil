{
  "name": "civil.ts",
  "version": "1.0.2",
  "description": "The core library allowing for interfacing with the whole Civil ecosystem",
  "main": "build/src/index.js",
  "types": "build/src/index.d.ts",
  "scripts": {
    "build": "npm run generate-contracts && tsc && copyfiles -u 2 './src/artifacts/**/*.json' ./build/src/artifacts",
    "lint": "tslint --project ./",
    "generate-contracts": "abi-gen --abiGlob 'src/artifacts/**/*.json' --templates 'src/contracts/templates/' --output 'src/contracts/generated/'",
    "test": "mocha build/test/ --reporter mocha-multi-reporters --reporter-options configFile=mocha.json",
    "tsc": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joincivil/civil.ts.git"
  },
  "author": "The Civil Media Company",
  "bugs": {
    "url": "https://github.com/joincivil/civil.ts/issues"
  },
  "homepage": "https://github.com/joincivil/civil.ts#readme",
  "devDependencies": {
    "@0xproject/abi-gen": "^0.1.1",
    "@joincivil/tslint-rules": "^2.4.0",
    "@types/chai": "^4.1.1",
    "@types/chai-as-promised": "^7.1.0",
    "@types/debug": "0.0.30",
    "@types/lodash": "^4.14.92",
    "@types/mocha": "^2.2.46",
    "@types/underscore": "^1.8.6",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-bignumber": "^2.0.2",
    "copyfiles": "^1.2.0",
    "dirty-chai": "^2.0.1",
    "mocha": "^5.0.0",
    "mocha-junit-reporter": "^1.16.0",
    "mocha-multi-reporters": "^1.1.7",
    "tslint": "^5.9.1",
    "typescript": "^2.6.2",
    "web3-typescript-typings": "^0.9.0"
  },
  "dependencies": {
    "bignumber.js": "^5.0.0",
    "debug": "^3.1.0",
    "ethereumjs-blockstream": "^3.1.0",
    "lodash": "^4.17.4",
    "rxjs": "^5.5.6",
    "web3": "^0.20.3"
  }
}
